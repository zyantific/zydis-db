  <ImportGroup>
    <Import Project="$(ParentDirectoryBuildPropsPath)" />
  </ImportGroup>

  <!-- Additional directives or overrides -->

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <EnableAotSupport>true</EnableAotSupport>
  </PropertyGroup>

  <PropertyGroup>
